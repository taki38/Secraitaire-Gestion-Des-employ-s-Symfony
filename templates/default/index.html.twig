{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Voici la liste de tous les employ√©s</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">@id</th>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Secteur</th>
            <th scope="col">Photo</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for employe in employes %}
        <tr class="table-success">
            <th scope="row">{{employe.id}}</th>
            <td>{{employe.firstname}}</td>
            <td>{{employe.lastname}}</td>
            <td>{{employe.sector}}</td>
            <td>
                {% if employe.image %}
                    <img style="height: 100px; width: 100px; display: block;" src="{{ asset('images/'~employe.image.name) }}" alt="employe image">
                {% endif %}
            </td>
            <td>
                <a href="{{ path('delete_employe', {'employe': employe.id}) }}">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
