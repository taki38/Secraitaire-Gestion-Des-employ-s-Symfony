{% extends 'base.html.twig' %}

{% block title %}Add employe{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Ajouter un employ√©</h1>


        {{ form_start(form) }}

        {{ form_row(form.firstname) }} <br>


        {{ form_row(form.lastname) }}<br>

        {{ form_row(form.sector) }}<br>


        {{ form_row(form.email) }}<br>


        {{ form_row(form.image) }}<br>

        {{ form_row(form.save) }}

        {{ form_end(form) }}

        <ul>
            {% if form.vars.errors.form.getErrors(true)|length > 0 %}
                {% for error in form.vars.errors.form.getErrors(true) %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            {% endif %}
        </ul>


    </div>
{% endblock %}
